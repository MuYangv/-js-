/* 样式初始化 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: #282c34;
}

.header {
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  color: white;
}

.canvas {
  width: 100%;
  height: 400px;
  background-color: black;
  margin-bottom: 20px;
}

.btn {
  margin: 10px 0; /* 上下各10px的间距，可以根据需要调整 */
  padding: 10px 20px; /* 按钮的内边距，调整按钮大小 */
  background-color: #1c87c9; /* 按钮背景颜色 */
  color: white; /* 按钮文字颜色 */
  border: none; /* 去掉边框 */
  border-radius: 5px; /* 按钮圆角 */
  font-size: 16px; /* 按钮字体大小 */
}

.btn:hover {
  background-color: #21a1f1;
}

.logs {
  width: 100%;
  max-height: 200px;
  background-color: #333;
  color: white;
  padding: 10px;
  margin-top: 20px;
  border-radius: 10px;
}
