/* 页面容器 */
.container {
  padding: 20px;
  background-color: #121212; /* 深色背景 */
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 页面标题 */
.header {
  margin-bottom: 30px;
}

.title {
  font-size: 32px;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  letter-spacing: 2px;
}

/* 简介文字 */
.description {
  font-size: 16px;
  color: #b0b0b0;
  margin-bottom: 20px;
  text-align: center;
  padding: 0 10px;
}

/* 卡片样式 */
.card {
  width: 90%;
  background-color: #1e1e1e;
  padding: 20px;
  margin-bottom: 20px;
  border-radius: 15px;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
  transition: transform 0.3s, background-color 0.3s;
}

.card:hover {
  background-color: #333333;
  transform: translateY(-10px); /* 悬停时上升 */
}

.card-title {
  font-size: 20px;
  color: #ffffff;
  margin-bottom: 10px;
  font-weight: bold;
}

.card-content {
  font-size: 16px;
  color: #cccccc;
  line-height: 1.6;
}

/* 返回按钮 */
.back-button {
  width: 80%;
  padding: 15px;
  margin-top: 30px;
  background: linear-gradient(45deg, #0066ff, #33ccff); /* 渐变按钮 */
  color: white;
  font-size: 18px;
  font-weight: bold;
  border-radius: 25px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  text-align: center;
  transition: background 0.3s, transform 0.2s;
}

.back-button:active {
  transform: scale(0.95); /* 点击时缩小 */
}
